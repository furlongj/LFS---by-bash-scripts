#!/bin/bash

NAME=bzip2
PROGRAM=$NAME-$bzip2_VER
FILE=$NAME-$bzip2_VER$bzip2_PRIP

source $SCRIPTS_DIR/include/unpack_gzip

echo -e "$Y Spoustim Build $DEF"

cd $BUILD_DIR/$PROGRAM
	echo -e "$G make $DEF"
	make
	if [ $? -ne 0 ]
		then
			echo -e "$R make selhalo $DEF"
			exit 1
	fi

	echo -e "$G make PREFIX=/tools install $DEF"
	make PREFIX=/tools install
	if [ $? -ne 0 ]
		then
			echo -e "$R make PREFIX=/tools install selhalo $DEF"
			exit 1
	fi

if [ $BUILD_RM == 1 ];
	then
		echo -e "$C Mazu slozku se zdrojaky $DEF"
        echo -e "$G rm -rf $BUILD_DIR/$PROGRAM $DEF"
        rm -rf $BUILD_DIR/$PROGRAM

	else
		echo -e "$C Slozka s buildem a zdrojaky ponechana $DEF"
fi

cd $ROOT
