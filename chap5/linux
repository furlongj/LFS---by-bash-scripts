#!/bin/bash

NAME=linux
PROGRAM=$NAME-$linux_VER
FILE=$NAME-$linux_VER$linux_PRIP

unpackBzip

waitUser

startBuild

cd $BUILD_DIR/$PROGRAM
{
	c_Make mrproper || exit 1
	waitUser
	c_Make headers_check || exit 1
	waitUser
	c_Make INSTALL_HDR_PATH=dest headers_install || exit 1
	waitUser
	copyFilesRec dest/include/* /tools/include
} 2>&1 | tee $BUILD_DIR/LOG_$PROGRAM.log
if [ $PIPESTATUS -ne 0 ]
	then
		echo -e "$L_FAIL_BUIL"
		exit 1
fi  
waitUser
RMsource
cd $ROOT
