#!/bin/bash

NAME=binutils
PROGRAM=$NAME-$binutils_VER
FILE=$NAME-$binutils_VER$binutils_PRIP
TIMEFORMAT="%1R = 1 SBU - $PROGRAM"

unpackBzipSep

waitUser

startBuild

cd $BUILD_DIR/$PROGRAM-BUILD

{ time \
  {

    c_ConfigureSep --target=$LFS_TGT --prefix=/tools --disable-nls --disable-werror || exit 1

    waitUser

    c_Make || exit 1

    waitUser

    case $(uname -m) in
    x86_64) mkdir -v /tools/lib && ln -sv lib /tools/lib64 ;;
    esac
    
    waitUser

    c_MakeInstall || exit 1
  }
} 2>&1 | tee $BUILD_DIR/LOG_$PROGRAM.log
	if [ $PIPESTATUS -ne 0 ]
		then
			echo -e "$L_FAIL_BUIL"
			exit 1
	fi  	  
waitUser
RMbuild
cd $ROOT
