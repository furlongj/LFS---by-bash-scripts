#!/bin/bash

NAME=coreutils
PROGRAM=$NAME-$coreutils_VER
FILE=$NAME-$coreutils_VER$coreutils_PRIP

unpackGzip

waitUser

startBuild

cd $BUILD_DIR/$PROGRAM
{
	c_Configure --prefix=/tools --enable-install-program=hostname
	if [ $? -ne 0 ]
		then
			echo -e "$L_FAIL_CONF"
			exit 1
	fi
	waitUser
	c_Make
	if [ $? -ne 0 ]
		then
			echo -e "$L_FAIL_MAKE"
			exit 1
	fi
	waitUser
	c_MakeTest RUN_EXPENSIVE_TESTS=yes check
	  if [ $? -ne 0 ]
	    then
		echo -e "$R make RUN_EXPENSIVE_TESTS=yes check selhalo $DEF"
		exit 1
	fi
	
	waitUser
	c_MakeInstall
	if [ $? -ne 0 ]
		then
			echo -e "$L_FAIL_MAKA"
			exit 1
	fi
	waitUser
	copyFiles src/su /tools/bin/su-tools
} 2>&1 | tee $BUILD_DIR/LOG_$PROGRAM.log
if [ $PIPESTATUS -ne 0 ]
	then
		echo -e "$L_FAIL_BUIL"
		exit 1
fi  	

waitUser
RMsource
cd $ROOT
