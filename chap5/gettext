#!/bin/bash

NAME=gettext
PROGRAM=$NAME-$gettext_VER
FILE=$NAME-$gettext_VER$gettext_PRIP

source $SCRIPTS_DIR/include/unpack_gzip

echo -e "$Y Spoustim Build $DEF"

cd $BUILD_DIR/$PROGRAM/gettext-tools
	echo -e "$G $PROGRAM/configure $DEF" 
   ./configure --prefix=/tools --disable-shared
    if [ $? -ne 0 ]
		then
			echo -e "$R Configure selhalo $DEF"
			exit 1
	fi

    echo -e "$G make -C gnulib-lib $DEF"
    make -C gnulib-lib
    if [ $? -ne 0 ]
		then
			echo -e "$R make -C gnulib-lib selhalo $DEF"
			exit 1
	fi

    echo -e "$G make -C src msgfmt $DEF"
    make -C src msgfmt
    if [ $? -ne 0 ]
		then
			echo -e "$R make -C src msgfmt $DEF"
			exit 1
	fi

	echo -e "$C Kpoiruji potrebne soubory $DEF"
	echo -e "$G cp -v src/msgfmt /tools/bin $DEF"
	cp -v src/msgfmt /tools/bin
	sleep 10
	
if [ $BUILD_RM == 1 ];
	then
		echo -e "$C Mazu slozku se zdrojaky $DEF"
        echo -e "$G rm -rf $BUILD_DIR/$PROGRAM $DEF"
        rm -rf $BUILD_DIR/$PROGRAM

	else
		echo -e "$C Slozka s buildem a zdrojaky ponechana $DEF"
fi

cd $ROOT
