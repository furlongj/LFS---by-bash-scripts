#!/bin/bash

NAME=bash
PROGRAM=$NAME-$bash_VER
FILE=$NAME-$bash_VER$bash_PRIP

unpackBzip

waitUser

startBuild

cd $BUILD_DIR/$PROGRAM
{
	addPatch bash-4.1-fixes-2.patch
	
	waitUser

	c_Configure --prefix=/tools --without-bash-malloc || exit 1

	waitUser

	c_Make || exit 1

	waitUser
	
	c_MakeTest tests || exit 1	exit 1
	fi

	waitUser
	
	c_MakeInstall || exit 1
	
	waitUser
	
	createSimLink /tools/bin/bash /tools/bin/sh
} 2>&1 | tee $BUILD_DIR/LOG_$PROGRAM.log
if [ $PIPESTATUS -ne 0 ]
	then
		echo -e "$L_FAIL_BUIL"
		exit 1
fi  	  

waitUser

RMsource

cd $ROOT
